.row
    div.alert.alert-success.alert-dismissible(role="alert" ng-show="isMessage")
        ul(ng-repeat="m in message")
            li {{m}}
.row
    div.alert.alert-danger.alert-dismissible(role="alert" ng-show="isError")
        ul(ng-repeat="message in error")
            li {{message}}

.row
    .col-lg-12
        table(st-table="rowCollection" class="table table-striped")
            thead
                tr
                    th(colspan="3")
                        h1 User Overview
                    th
                        input(st-search="" class="form-control" placeholder="Search ..." type="text")
                tr
                    th
                        button.btn.btn-success(ng-click="createUserModal()")
                            span.glyphicon.glyphicon-plus
                            |  Add user
                tr
                    th Name
                    th Email
                    th Role
                    th Actions
            tbody
                tr(ng-repeat="row in rowCollection")
                    td {{row.firstName + ' ' + row.lastName}}
                    td {{row.email}}
                    td {{row.role}}
                    td
                        .btn-group
                            button.btn.btn-warning
                                span.glyphicon.glyphicon-pencil
                                |  Edit user
                            button.btn.btn-danger
                                span.glyphicon.glyphicon-remove
                                |  Archive user
            tfoot
                tr
                    td(colspan="4" class="text-center")
                        div(st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="showNumberOfPages")